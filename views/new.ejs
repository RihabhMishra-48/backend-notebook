<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task App</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">

  <div class="main w-full min-h-screen p-8">
    <div class="form bg-zinc-800 p-6 rounded-xl max-w-md mx-auto">
      <form action="">
        <input class="w-full mb-4 p-2 rounded bg-zinc-700 text-white" type="text" placeholder="Title goes here">
        <textarea class="w-full mb-4 p-2 rounded bg-zinc-700 text-white resize-none" placeholder="Write your Description here"></textarea>
        <input class="bg-blue-500 px-4 py-2 rounded hover:bg-blue-600 cursor-pointer" type="submit" value="Create Task">
      </form>
    </div>

  <div class="Tasks mt-10 w-full flex gap-3 flex-wrap justify-center">
  <% if (files.length > 0) { %>
    <% files.forEach(function(val) { %>
      <div class="Task w-72 px-3 py-4 bg-zinc-800 rounded-xl">
        <p class="text-white text-2xl"><%= val.title %></p>
        <a class="text-blue-500 inline-block mt-3" href="">Read more</a>
      </div>
    <% }) %>
  <% } else { %>
    <h3 class="text-zinc-600">No tasks yet</h3>     
  <% } %>

  <div class="Task w-72 px-3 py-4 bg-zinc-800 rounded-xl">
    <p class="text-white text-2xl">Some task goes here</p>
    <a class="text-blue-500 inline-block mt-3" href="">Read more</a>
  </div>

  <div class="Task w-72 px-3 py-4 bg-zinc-800 rounded-xl">
    <p class="text-white text-2xl">Some task goes here</p>
    <a class="text-blue-500 inline-block mt-3" href="">Read more</a>
  </div>
</div>

  </div>

</body>
</html>
