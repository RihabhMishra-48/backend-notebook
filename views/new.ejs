<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task App</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">

  <div class="main w-full min-h-screen p-8">
    
    <!-- Form Section -->
    <div class="form bg-zinc-800 p-6 rounded-xl max-w-md mx-auto">
      <form action="/create" method="post">
        <input class="w-full mb-4 p-2 rounded bg-zinc-700 text-white" type="text" placeholder="Title goes here" name="title" required>
        <textarea class="w-full mb-4 p-2 rounded bg-zinc-700 text-white resize-none" placeholder="Write your Description here" name="details" required></textarea>
        <input class="bg-blue-500 px-4 py-2 rounded hover:bg-blue-600 cursor-pointer" type="submit" value="Create Task">
      </form>
    </div>

    <!-- Task List -->
    <div class="Tasks mt-10 w-full flex gap-4 flex-wrap justify-center">
      <% if (files.length > 0) { %>
        <% files.forEach(function(val) { %>
          <div class="Task w-72 px-4 py-4 bg-zinc-800 rounded-xl shadow-md">
            <p class="text-white text-xl font-semibold break-words mb-3"><%= val %></p>
            <div class="flex justify-between items-center">
              <a class="text-blue-400 hover:underline" href="/files/<%= val %>">Read more</a>
              <a class="text-yellow-400 hover:underline" href="/edit/<%= val %>">Edit</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-zinc-500 text-center text-lg mt-10">No tasks yet</h3>
      <% } %>
    </div>

  </div>

</body>
</html>
